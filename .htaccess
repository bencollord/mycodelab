##########################################
# REDIRECT ALL TRAFFIC TO "PUBLIC" FOLDER
##########################################

<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteBase   /myphpwebsiteuserauth/
    
    RewriteRule   ^$      src/public/   [L]
    RewriteRule   ^(.*)$  src/public/$1 [L]
</IfModule>